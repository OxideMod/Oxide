      <Project>{67f65f5d-a62a-4752-849d-bff30d828107}</Project>
      <Name>Core</Name>
    </ProjectReference>
    <ProjectReference Include="..\..\..\Extensions\Oxide.Core.CSharp\CSharp.csproj">
