    <Optimize>true</Optimize>
    <DebugType>pdbonly</DebugType>
    <PlatformTarget>AnyCPU</PlatformTarget>
    <ErrorReport>prompt</ErrorReport>
  </PropertyGroup>
  <ItemGroup>
    <Reference Include="Oxide.References">
      <HintPath>..\..\..\Oxide.References\bin\$(Configuration)\net35\Merged\Oxide.References.dll</HintPath>
    </Reference>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="NomadServer">
      <HintPath>Patched\NomadServer.exe</HintPath>
    </Reference>
  </ItemGroup>
  <ItemGroup>
    <Compile Include="NomadHooks.cs" />
    <Compile Include="Libraries\Covalence\NomadCommandSystem.cs" />
    <Compile Include="Libraries\Covalence\NomadCovalenceProvider.cs" />
